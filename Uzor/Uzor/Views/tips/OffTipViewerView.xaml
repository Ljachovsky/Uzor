<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uzor.Views.tips.OffTipViewerView"
             xmlns:resources="clr-namespace:Uzor.Localization">
  <ContentView.Content>
      <StackLayout VerticalOptions="Center">
            <Button Text="{x:Static resources:AppResource.OffTips}" CornerRadius="50" HeightRequest="40" Clicked="offTips_Clicked"/>
            <Image x:Name="IsCheckedIcon" Opacity="0" Source="checked.png" x:FieldModifier="Public" HeightRequest="30" Margin="10"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>