<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uzor.Views.LongUzorEditorPageViews.DistanceParametersView"
             xmlns:resources="clr-namespace:Uzor.Localization">
  <ContentView.Content>
        <Frame CornerRadius="15" Margin="15,0,15,15" BackgroundColor="#CC212121">
            <StackLayout Spacing="23">
                <Label Text="{x:Static resources:AppResource.DistancesValue}" HorizontalOptions="Center" FontSize="Default" TextColor="White"/>
                <Slider x:Name="A"  Maximum="300" Minimum="50" ValueChanged="slider_Changed" ThumbColor="White"/>
                <Slider x:Name="B" ValueChanged="slider_Changed" ThumbColor="White"/>
                <Slider x:Name="C" ValueChanged="slider_Changed" ThumbColor="White"/>
            </StackLayout>
        </Frame>
  </ContentView.Content>
</ContentView>