<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uzor.Views.UzorItem">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapOnItem" /> 
    </ContentView.GestureRecognizers>
    <ContentView.Content>
        <Frame HeightRequest="200" Padding="0" CornerRadius="15" BackgroundColor="#DF2727">
            <RelativeLayout >
                <Label Text="ItemName: " FontSize="25"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5, Constant=-20}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.1}"
                       ></Label>
            </RelativeLayout>
        </Frame>
        
  </ContentView.Content>
</ContentView>