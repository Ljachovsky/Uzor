<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uzor.Views.UzorEditorStepsTopPanel"
             xmlns:resources="clr-namespace:Uzor.Localization">
    
  <ContentView.Content>
        <Grid x:Name="BeforeAndNextButtonGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="BeforeButton" x:FieldModifier="public" HeightRequest="50"  CornerRadius="10" TextColor="#2F2F2F" Text="{x:Static resources:AppResource.Exit}" Grid.Column="0" Margin="10,10,0,10" BackgroundColor="#C3CBD4"/>
            <Label x:Name="StepLabel" HorizontalOptions="Center" x:FieldModifier="public" HeightRequest="50" TextColor="Gray" Text="1/2" FontSize="20" Grid.Column="1"/>
            <Button x:Name="NextButton" x:FieldModifier="public" HeightRequest="50"  CornerRadius="10" TextColor="#2F2F2F" Text="{x:Static resources:AppResource.NextStep}" Grid.Column="2" Margin="10,10,0,10" BackgroundColor="#C3CBD4" />
        </Grid>

        
    </ContentView.Content>
</ContentView>